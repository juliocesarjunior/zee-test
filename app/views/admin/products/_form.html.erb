<div class="col-md-12">
  <div class="card">
    <div class="card-header">
      <h5 class="card-title"><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h5>
    </div>
    <div class="card-body">
      <%= simple_form_for([:admin, @product]) do |f| %>
      <div class="row">
        <div class="mb-3 col-md-12">
          <%= f.input :name_display, input_html: { class: "form-control form-control-lg"}, hint_html: {class: "form-text"}, label_html: {class: "form-label"} %>
        </div>
        <div class="mb-3 col-md-12">
          <%= f.input :manufacturer, input_html: { class: "form-control form-control-lg"}, hint_html: {class: "form-text"}, label_html: {class: "form-label"} %>
        </div>
        <div class="mb-3 col-md-12">
          <div class="form-check form-switch">
            <%= f.input :active, input_html: { class: "form-check-input " ,type:"checkbox" ,role:"switch" , style: "height: 30px; width: 50px;" }, label_html: {class: "form-label"} %>
          </div>
        </div>
        <div class="mb-3 col-md-12">
          <%= f.input :description, input_html: { class: "form-control form-control-lg"}, hint_html: {class: "form-text"}, label_html: {class: "form-label"} %>
        </div>
        <%= f.simple_fields_for :skus do |sku| %>
            <%= render 'sku_fields', f: sku %>
        <% end -%>
        <div class="mb-3">
          <%= link_to_add_association f, :skus, class: "btn btn-primary" do %>
          <i class="bx bx-plus me-1"></i>
          <span class="align-middle">Add</span>
          <% end -%>
        </div>
      </div>
      <%= f.submit nil, class: 'btn btn-success', data: {disable_with: 'Salvando...'} %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),admin_products_path, class: 'btn btn-outline-primary button_link' %>
      <% end -%>
    </div>
  </div>
</div>