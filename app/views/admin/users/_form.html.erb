    <div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title"><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h5>
        </div>
        <div class="card-body">
            <%= simple_form_for([:admin, @user]) do |f| %>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <%= f.input :status, as: :select, collection: User.statuses.keys.map { |status| [I18n.t("enums.status.#{status}"), status] }, input_html: { class: "form-control form-select"}, hint_html: {class: "form-text"}, label_html: {class: "form-label"}, disabled: (current_user.id == @user.id)  %>
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <%= f.input :name, input_html: { class: "form-control form-control-lg"}, hint_html: {class: "form-text"}, label_html: {class: "form-label"} %>
                </div>
                <div class="mb-3 col-md-6">
                    <%= f.input :email, input_html: { class: "form-control form-control-lg"}, hint_html: {class: "form-text"}, label_html: {class: "form-label"} %>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-12 mb-3">
                    <%= f.input :password, include_blank: false, input_html: { class: "form-control form-control-lg"}, wrapper_html: {class: "form-group"} %>
                </div>
                <div class="col-md-6 col-12 mb-3">
                    <%= f.input :password_confirmation, include_blank: false, input_html: { class: "form-control form-control-lg"}, wrapper_html: {class: "form-group"} %>
                </div>
            </div>

            <% if !@user.id.nil? %>
            <div class="row">
                <div class="mb-3 col-12 text-center profile">
                    <img src="/assets/profile/user-1.jpg" width="150" height="150" alt="<%= @user&.name %>">
                </div>
            </div>
            <% end %>
            <%= f.submit nil, class: 'btn btn-success', data: {disable_with: 'Salvando...'} %>
            <%= link_to t('.cancel', default: t("helpers.links.cancel")),admin_users_path, class: 'btn btn-outline-primary button_link' %>
            <% end -%>
        </div>
    </div>
</div>