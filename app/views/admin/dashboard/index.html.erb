<div class="row">
	<div class="col-sm-6 col-xl-4">
		<div class="card bg-primary-subtle shadow-none">
			<div class="card-body p-4">
				<div class="d-flex align-items-center">
					<div class="text-white bg-secondary round rounded p-6 d-flex align-items-center justify-content-center">
						<i class="fa-solid fa-cart-shopping fa-2x"></i>
					</div>
					<h6 class="mb-0 ms-3">Produtos</h6>
					<div class="ms-auto text-primary d-flex align-items-center">
						<h3 class="mb-0 fw-semibold fs-7"><%= Product.count %></h3>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-sm-6 col-xl-4">
		<div class="card bg-primary-subtle shadow-none">
			<div class="card-body p-4">
				<div class="d-flex align-items-center">
					<div class="text-white bg-secondary round rounded p-6 d-flex align-items-center justify-content-center">
						<i class="fa-solid fa-barcode fa-2x"></i>
					</div>
					<h6 class="mb-0 ms-3">Skus</h6>
					<div class="ms-auto text-primary d-flex align-items-center">
						<h3 class="mb-0 fw-semibold fs-7"><%= Sku.count %></h3>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-sm-6 col-xl-4">
		<div class="card bg-primary-subtle shadow-none">
			<div class="card-body p-4">
				<div class="d-flex align-items-center">
					<div class="text-white bg-secondary round rounded p-6 d-flex align-items-center justify-content-center">
						<i class="fa-solid fa-users fa-2x"></i>          </div>
						<h6 class="mb-0 ms-3">Usu√°rios</h6>
						<div class="ms-auto text-primary d-flex align-items-center">
							<h3 class="mb-0 fw-semibold fs-7"><%= User.count %></h3>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 d-flex align-items-stretch">
			<div class="card w-100">
				<div class="card-body p-4">
					<h5 class="card-title fw-semibold mb-4">Ultimos Produtos</h5>
					<div class="table-responsive">
						<table class="table text-nowrap mb-0 align-middle">
							<thead class="text-dark fs-4">
								<tr>
									<th class="border-bottom-0">
										<h6 class="fw-semibold mb-0">#ID</h6>
									</th>
									<th class="border-bottom-0">
										<h6 class="fw-semibold mb-0">Produto</h6>
									</th>
									<th class="border-bottom-0">
										<h6 class="fw-semibold mb-0">Cadastrado em</h6>
									</th>
									<th class="border-bottom-0">
										<h6 class="fw-semibold mb-0">Atualizado em</h6>
									</th>
								</tr>
							</thead>
							<tbody>
								<% @products.each do |product| %>

								<tr>
									<td class="border-bottom-0"><h6 class="fw-semibold mb-0"><%= product.id %></h6></td>
									<td class="border-bottom-0">
										<h6 class="fw-semibold mb-0 fs-4"><%= product.name_display %></h6>
										<span class="fw-normal mb-0 fs-4"><%= product.manufacturer %></span>
									</td>
									<td class="border-bottom-0">
										<h6 class="fw-semibold mb-0 fs-4"><%=l product.created_at %></h6>
									</td>
									<td class="border-bottom-0">
										<h6 class="fw-semibold mb-0 fs-4"><%=l product.updated_at %></h6>
									</td>
								</tr>
								<% end -%>

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>